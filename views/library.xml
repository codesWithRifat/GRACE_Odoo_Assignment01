<odoo>
    <!-- Tree View -->
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree string="Members">
                <field name="name"/>
                <field name="class_id"/>
                <field name="division"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="is_active" widget="boolean"/>
                <field name="birth_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="name"/>
                            <field name="class_id"/>
                            <field name="division"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="birth_date"/>
                            <field name="gender"/>
                            <field name="is_active"/>
                            <field name="profile_picture"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_member_kanban" model="ir.ui.view">
        <field name="name">library.member.kanban</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <kanban default_group_by="class_id">
                <field name="class_id"/>
                <field name="profile_picture"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <t t-if="record.profile_picture.raw_value">
                                    <img t-att-src="'data:image/png;base64,' + record.profile_picture.raw_value" class="oe_kanban_image" alt="Profile Picture"/>
                                </t>
                                <t t-else="">
                                    <img src="/web/static/img/placeholder.png" class="oe_kanban_image" alt="No Image"/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Class: <field name="class_id"/></div>
                                <div>Division: <field name="division"/></div>
                                <div t-if="record.is_active.raw_value" style="color: green;">Active</div>
                                <div t-else="" style="color: red;">Inactive</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Bar Chart View -->
    <record id="view_library_member_bar_gender_class" model="ir.ui.view">
        <field name="name">library.member.bar.gender.class</field>
        <field name="model">library.member</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Gender Distribution by Class" type="bar">
                <field name="class_id" type="row"/>
                <field name="gender" type="column"/>
                <field name="id" type="measure" operator="count"/>
            </graph>
        </field>
    </record>
    
    <!-- Pie Chart View -->
    <record id="view_library_member_pie" model="ir.ui.view">
        <field name="name">library.member.pie</field>
        <field name="model">library.member</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
             <graph string="Members Distribution" type="pie">
                <field name="division" type="groupby"/>
                <field name="id" type="measure" operator="count"/>
             </graph>   
        </field>
    </record>

    <!-- Action (Updated to include Kanban view) -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">kanban,tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first member record
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="library_menu_root" name="Library Management" sequence="10"/>
    <menuitem id="library_member_menu" name="Members" parent="library_menu_root" action="action_library_member"/>
</odoo>