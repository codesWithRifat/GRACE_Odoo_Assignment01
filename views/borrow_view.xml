<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_library_borrow_tree" model="ir.ui.view">
        <field name="name">library.borrow.tree</field>
        <field name="model">library.borrow</field>
        <field name="arch" type="xml">
            <tree>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_borrow_form" model="ir.ui.view">
        <field name="name">library.borrow.form</field>
        <field name="model">library.borrow</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="member_id"/>
                        <field name="book_id"/>
                        <field name="borrow_date"/>
                        <field name="return_date"/>
                        <field name="quantity"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_borrow" model="ir.actions.act_window">
        <field name="name">Borrow Books</field>
        <field name="res_model">library.borrow</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a borrow entry for a book</p>
        </field>
    </record>

    <!-- Menu Items -->
    <!-- Add under Library Management root menu -->
    <menuitem id="library_menu_root" name="Library Management" sequence="10"/>
    <menuitem id="library_borrow_menu" name="Borrow" parent="library_menu_root" action="action_library_borrow"/>
</odoo>
