<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Author Tree View -->
    <record id="view_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="book_count"/>
            </tree>
        </field>
    </record>

    <!-- Author Form View -->
    <record id="view_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="book_count"/>
                    </group>
                    <notebook>
                        <page string="Biography">
                            <field name="biography"/>
                        </page>
                        <page string="Books">
                            <field name="book_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="genre"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Author Action -->
    <record id="action_library_author" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="library_menu_root" name="Library Management" sequence="10"/>
    <menuitem id="library_author_menu" name="Author" parent="library_menu_root" action="action_library_author"/>
</odoo>