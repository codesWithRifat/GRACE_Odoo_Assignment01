<odoo>
    <record id="product_template_form_view_inherit_book" model="ir.ui.view">
        <field name="name">product.template.book.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="is_book"/>
                <field name="book_genre" attrs="{'invisible': [('is_book', '=', False)]}"/>
                <field name="author_name" attrs="{'invisible': [('is_book', '=', False)]}"/>
                <field name="publish_date" attrs="{'invisible': [('is_book', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
