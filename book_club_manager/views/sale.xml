<odoo>
    <record id="sale_order_form_view_inherit_book_club" model="ir.ui.view">
        <field name="name">sale.order.book.club.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_book_club_order"/>
                <field name="membership_level" attrs="{'invisible': [('is_book_club_order', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
